<?xml version="1.0"?>
<ruleset name="MyCustomStandard">
    <description>Mon standard de codage personnalisé.</description>

    <!-- Exclure les dossiers spécifiques -->
    <exclude-pattern>vendor/</exclude-pattern>

    <!-- Règles de base PSR-1 -->
    <rule ref="PSR1"/>

    <!-- Interdire l'indentation avec des espaces -->
    <rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>


    <!-- Limiter la longueur de ligne à 100 caractères -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="100"/>
            <property name="absoluteLineLimit" value="100"/>
        </properties>
    </rule>

    <!-- Autres règles pour le nommage et la structure -->
    <rule ref="Squiz.ControlStructures.ControlSignature"/>
    <rule ref="Generic.Formatting.DisallowMultipleStatements"/>
    <rule ref="Squiz.NamingConventions.ValidVariableName"/>
    <rule ref="Generic.PHP.NoSilencedErrors"/>
</ruleset>
